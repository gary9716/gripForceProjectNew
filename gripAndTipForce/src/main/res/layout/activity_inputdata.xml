<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="112dp"
        android:src="@drawable/title2" />

    <fragment
        android:id="@+id/input_data_fragment"
        android:name="com.mhci.gripandtipforce.InputDataFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1" />

    <Button
        android:id="@+id/button_complete_personal_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_data_fragment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="下一步"
        android:textSize="@dimen/bt_setting_text_size" />

</RelativeLayout>
